<form method="post" action="/dashboard/artist/{{_id}}" class="form" enctype="multipart/form-data">
    <h1  class="title">update an artist</h1>

    <label for="name" class="label">NAME</label>
    <input class="input" type="text" id="name" name="name" value="{{name}}">

    <label for="description" class="label">description</label>
    <textarea type="text" class="input" id="description" name="description"> {{description}}
    </textarea>

      <label for="label" class="label">LABEL</label>
    <input class="input" type="text" id="name" name="label" value="{{label}}">

       <label for="style" class="label">STYLE</label>
    <input class="input" type="text" id="name" name="style" value="{{style}}">

    <label for="picture" class="label">
        choose a picture
        <i class="icon fas fa-cloud-upload-alt fa-2x"></i>
    </label>
    <input class="is-hidden" type="file" id="picture" name="picture">

    <button class="btn">update</button>
</form>